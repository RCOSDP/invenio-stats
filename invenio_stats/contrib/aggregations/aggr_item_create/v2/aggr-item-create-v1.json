{
  "template": "stats-item-create-*",
  "settings": {
    "index.mapper.dynamic": false,
    "index": {
      "refresh_interval": "1m"
    }
  },
  "mappings": {
    "item-create-day-aggregation": {
      "_all": {
        "enabled": false
      },
      "date_detection": false,
      "dynamic": false,
      "numeric_detection": false,
      "properties": {
        "timestamp": {
          "type": "date",
          "format": "date_optional_time"
        },
        "count": {
          "type": "integer",
          "index": "not_analyzed"
        },
        "unique_count": {
          "type": "integer",
          "index": "not_analyzed"
        },
        "country": {
          "type": "string",
          "index": "not_analyzed"
        },
        "remote_addr": {
          "type": "string",
          "index": "not_analyzed"
        },
        "collection": {
          "type": "string",
          "index": "not_analyzed"
        }
      }
    },
    "item-create-host-aggregation": {
      "date_detection": false,
      "properties": {
        "remote_addr": {
          "type": "string",
          "index": "not_analyzed"
        },
        "count": {
          "type": "integer",
          "index": "not_analyzed"
        }
      }
    }
  },
  "aliases": {
    "stats-item-create": {}
  }
}
